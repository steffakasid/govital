# Govital Configuration Example
# Copy this file to ~/.govital/govital.yaml or .govital.yaml in your project root

# Logging configuration
log_level: info  # Options: debug, info, warn, error

# Scanner configuration
scanner:
  # Number of days a dependency can be inactive before marked as stale
  # Default: 30 days
  stale_threshold_days: 30

  # Number of days a dependency must have been updated within to be considered actively maintained
  # Default: 90 days (3 months)
  active_threshold_days: 90
